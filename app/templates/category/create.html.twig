
{% extends 'base.html.twig' %}

{% block title %}
    {{ 'Dodaj nową kategorię'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'Dodaj nową kategorię'|trans }}</h1>
    {{ form_start(form, { method: 'POST', action: url('category_create') }) }}
    {{ form_widget(form) }}
    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'Zapisz nową kategorię'|trans }}" class="btn btn-primary" />
    </div>
    <div class="form-group row float-sm-left">
        <a href="{{ url('category_index') }}" class="btn btn-link">
            {{ 'Wróć do listy kategorii'|trans }}
        </a>
    </div>
    {{ form_end(form) }}
{% endblock %}