{% extends 'base.html.twig' %}

{% block title %}
    {{ 'Informacje o kategorii'|trans({'%id%': category.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'Informacje o Kategorii'|trans({'%id%': category.id|default('')}) }}</h1>
    {% if category is defined and category|length %}
        <dl class="dl-horizontal">
            <dt>{{ 'ID kategorii'|trans }}</dt>
            <dd>{{ category.id }}</dd>
            <dt>{{ 'Nazwa kategorii'|trans }}</dt>
            <dd>{{ category.category_name}}</dd>
            <dt>{{ 'Przepisy'|trans }}</dt>
{% for recipe in category.getRecipes %}
           <a href="{{ url('recipe_show',{id: recipe.id}) }}">{{ recipe.recipe_name }}<br>
    </a>
{% endfor %}
        </dl>


        <p>
            <a href="{{ url('category_index') }}" title="{{ 'action_back_to_list'|trans }}">
                {{ 'Przej≈∫ do listy kategorii'|trans }}
            </a>
        </p>
    {% else %}
        <p>
            {{ 'message_item_not_found'|trans }}
        </p>
    {% endif %}
{% endblock %}