{% extends 'base.html.twig' %}

{% block title %}
    {{ 'Edycja kategorii'|trans({'%id%': category.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'Edycja kategorii'|trans({'%id%': category.id|default('')}) }} {{ category.category_name }}</h1>
    {{ form_start(form, { method: 'PUT', action: url('category_edit', {id: category.id}) }) }}
    {{ form_widget(form) }}
    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'Zapisz zmiany'|trans }}" class="btn btn-primary" />
    </div>
    <div class="form-group row float-sm-left">
        <a href="{{ url('category_index') }}" class="btn btn-link">
            {{ 'Wróć do listy kategorii'|trans }}
        </a>
    </div>
    {{ form_end(form) }}
{% endblock %}