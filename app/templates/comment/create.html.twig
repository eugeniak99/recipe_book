{% extends 'base.html.twig' %}

{% block title %}
    {{ 'Dodaj nowy komentarz'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'Dodaj nowy komentarz'|trans }}</h1>
    {{ form_start(form, { method: 'POST', action: url('comment_create') }) }}
    {{ form_widget(form) }}
    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'Zapisz zmiany'|trans }}" class="btn btn-primary" />
    </div>
    <div class="form-group row float-sm-left">
        <a href="{{ url('comment_index') }}" class="btn btn-link">
            {{ 'Wróć do listy komentarzy'|trans }}
        </a>
    </div>
    {{ form_end(form) }}
{% endblock %}