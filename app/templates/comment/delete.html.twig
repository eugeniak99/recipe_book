{% extends 'base.html.twig' %}

{% block title %}
    {{ 'Usuwanie komentarza'|trans({'%id%': comment.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'Usuwanie komentarza'|trans({'%id%': comment.id|default('')}) }}</h1>
    {{ form_start(form, { method: 'DELETE', action: url('comment_delete', {id: comment.id}) }) }}
    {{ form_widget(form) }}
    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'Potwierdź usuwanie'|trans }}" class="btn btn-primary" />
    </div>
    <div class="form-group row float-sm-left">
        <a href="{{ url('comment_index') }}" class="btn btn-link">
            {{ 'Wróć do listy komentarzy'|trans }}
        </a>
    </div>
    {{ form_end(form) }}
{% endblock %}