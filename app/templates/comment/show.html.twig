{% extends 'base.html.twig' %}

{% block title %}
    {{ 'comment_info'|trans({'%id%': comment.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'comment_info'|trans({'%id%': comment.id|default('')}) }}</h1>
    {% if comment is defined and comment|length %}
        <dl class="dl-horizontal">
            <dt>{{ 'label_id'|trans }}</dt>
            <dd>{{ comment.id }}</dd>
            <dt>{{ 'label_creation_date'|trans }}</dt>
            <dd>{{ comment.comment_date|date('Y/m/d')}}</dd>
            <dt>{{ 'label_comment_content'|trans }}</dt>

            <dd>{{ comment.comment_content }}</dd>

        </dl>


        <p>
            <a href="{{ url('comment_index') }}" title="{{ 'action_back_to_list'|trans }}">
                {{ 'action_back_to_comment_list'|trans }}
            </a>
        </p>
    {% else %}
        <p>
            {{ 'message_item_not_found'|trans }}
        </p>
    {% endif %}
{% endblock %}