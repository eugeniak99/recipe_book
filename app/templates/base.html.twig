<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
        <link rel="stylesheet" href="{{ asset('styles/styles.css') }}">
    {% endblock %}
</head>
<body>
{% if is_granted ('ROLE_USER') %}
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="#">Książka kucharska</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">

            <li class="nav-item">
                <a class="nav-link" href="{{url('recipe_index') }}">Przepisy</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{url('category_index') }}">Kategorie</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ url('tag_index') }}">Tagi</a>
                {% if is_granted('ROLE_ADMIN') %}
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ url('comment_index') }}">Komentarze</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ url('user_index') }}">Użytkownicy</a>
            </li>
            {% endif %}

            <li class="nav-item">
                <a class="nav-link" href="{{ url('password_edit', {id: app.user.id}) }}">Zmień hasło</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ url('userdata_edit', {id: app.user.userData.id}) }}">Zmień dane użytkownika</a>
            </li>

            <li class="nav-item">
                <a class="nav-link" href="{{ url('app_logout') }}">Wyloguj się</a>
            </li>
        </ul>
        <form class="form-inline my-2 my-lg-0">
            <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
        </form>
    </div>
</nav>
{% endif %}
{% if app.user and is_granted ('ROLE_USER') %}
    <div class="mb-3">
       Jesteś zalogowany jako {{ app.user.userData.nickname }}
    </div>
{% endif %}

<div class="container-fluid">

    <div class="container-fluid">
        {% include 'default/_flash_messages.html.twig' %}
        {% block body %}{% endblock %}
    </div>

</div>

{% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
{% endblock %}
</body>
</html>