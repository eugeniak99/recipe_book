{% extends 'base.html.twig' %}

{% block title %}{{ 'registration'|trans }}{% endblock %}

{% block body %}
    <h1>{{ 'registration'|trans }}</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword) }}
    {{ form_row(registrationForm.userData) }}
        {{ form_row(registrationForm.agreeTerms) }}


        <button type="submit" class="btn btn-lg btn-primary" >{{ 'registration'|trans }}</button>
    <a href="{{ url('app_login') }}" class="btn btn-link" style="background-color: white">
        {{ 'old_account'|trans }}
    </a>
    {{ form_end(registrationForm) }}
{% endblock %}
