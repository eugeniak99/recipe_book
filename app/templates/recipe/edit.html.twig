{% extends 'base.html.twig' %}

{% block title %}
    {{ 'Edycja przepisu'|trans({'%id%': recipe.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'Edycja przepisu'|trans({'%id%': recipe.id|default('')}) }} {{ recipe.recipe_name }}</h1>
    {{ form_start(form, { method: 'PUT', action: url('recipe_edit', {id: recipe.id}) }) }}
    {{ form_widget(form) }}
    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'action_save'|trans }}" class="btn btn-primary" />
    </div>
    <div class="form-group row float-sm-left">
        <a href="{{ url('recipe_index') }}" class="btn btn-link">
            {{ 'Wróć do listy przepisów'|trans }}
        </a>
    </div>
    {{ form_end(form) }}
{% endblock %}