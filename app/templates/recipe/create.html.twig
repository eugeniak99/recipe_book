{% extends 'base.html.twig' %}
{% block title %}
    {{ 'Dodaj nowy przepis'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'Dodaj nowy przepis'|trans }}</h1>
    {{ form_start(form, { method: 'POST', action: url('recipe_create') }) }}
    {{ form_widget(form) }}
    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'Zapisz nowy przepis'|trans }}" class="btn btn-primary" />
    </div>
    <div class="form-group row float-sm-left">
        <a href="{{ url('recipe_index') }}" class="btn btn-link">
            {{ 'Wróć do listy przepisów'|trans }}
        </a>
    </div>
    {{ form_end(form) }}
{% endblock %}