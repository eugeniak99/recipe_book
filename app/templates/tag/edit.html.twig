{% extends 'base.html.twig' %}

{% block title %}
    {{ 'Edycja tagu'|trans({'%id%': tag.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'Edycja tagu'|trans({'%id%': tag.id|default('')}) }}</h1>
    {{ form_start(form, { method: 'PUT', action: url('tag_edit', {id: tag.id}) }) }}
    {{ form_widget(form) }}
    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'Zatwierdź zmiany'|trans }}" class="btn btn-primary" />
    </div>
    <div class="form-group row float-sm-left">
        <a href="{{ url('tag_index') }}" class="btn btn-link">
            {{ 'Wróć do listy tagów'|trans }}
        </a>
    </div>
    {{ form_end(form) }}
{% endblock %}