{% extends 'base.html.twig' %}

{% block title %}
    {{ 'Usuwanie tagu'|trans({'%id%': tag.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'Usuwanie tagu'|trans({'%id%': tag.id|default('')}) }}</h1>
    {{ form_start(form, { method: 'DELETE', action: url('tag_delete', {id: tag.id}) }) }}
    {{ form_widget(form) }}
    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'Zatwierdź zmiany'|trans }}" class="btn btn-primary" />
    </div>
    <div class="form-group row float-sm-left">
        <a href="{{ url('category_index') }}" class="btn btn-link">
            {{ 'Wróć do listy tagów'|trans }}
        </a>
    </div>
    {{ form_end(form) }}
{% endblock %}