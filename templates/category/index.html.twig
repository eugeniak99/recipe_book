{% extends 'base.html.twig' %}

{% block title %}
    {{ 'Lista przepisów'|trans }}
{% endblock %}

{% block body %}
<h1>{{ 'Lista przepisów'|trans }}</h1>
{% if pagination is defined and pagination.items|length %}

<div class="navigation text-center">
    {{ knp_pagination_render(pagination) }}
</div>

<table class="table table-striped">
    <thead>
    <tr>
        <th>{{ knp_pagination_sortable(pagination, 'ID kategorii'|trans, 'category.id') }}</th>
        <th>{{ knp_pagination_sortable(pagination, 'Nazwa Kategorii'|trans, 'category.category_name') }}</th>

        <th>{{ 'Działanie'|trans }}</th>
    </tr>
    </thead>
    <tbody>
    {% for category in pagination.items %}
        <tr>
            <td>{{ category.id }}</td>
            <td>{{ category.category_name}}</td>


            <td>
                <a href="{{ url('category_show', {id: category.id}) }}" title="{{ 'akcja_view'|trans }}">
                    {{ 'Pokaż szczegóły' }}
                </a>
            </td>

        </tr>
    {% endfor %}
    </tbody>
</table>

    <div class="navigation text-center">
        {{ knp_pagination_render(pagination) }}
    </div>

{% else %}
    <p>
        {{ 'message_empty_list'|trans }}
    </p>
{% endif %}
{% endblock %}
